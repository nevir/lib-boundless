{
  "files.exclude": {
    "{src,test}/**/*.js": true,
    "{src,test}/**/*.d.ts": true
  },
  "editor.formatOnSave": true,
  "editor.rulers": [80, 110],
  "eslint.autoFixOnSave": true,
  "eslint.provideLintTask": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    {
      "language": "typescript",
      "autoFix": true
    },
    {
      "language": "typescriptreact",
      "autoFix": true
    }
  ],
  "jest.pathToJest": "./scripts/jest.js"
}
